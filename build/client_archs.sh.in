# Helper script to create apt-dater-host-(rpm|rug|yum|zypper)-@PACKAGE_VERSION@.tar.gz files.

for i in rpm rug yum zypper; do
    tmpd="tmp-$i"
    name="@PACKAGE@-host-$i-@PACKAGE_VERSION@"
    rm -rf "$tmpd"
    mkdir -p "$tmpd"
    svn export "../clients/$i" "$tmpd/$name"
    (cd $tmpd && tar -cvz -f "../$name.tar.gz" --owner=root $name)
    rm -rf "$tmpd"
done
