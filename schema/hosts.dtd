<!-- Root element -->
<!ELEMENT hosts (default?,group*)>
<!ATTLIST hosts xmlns:xi CDATA #IMPLIED>

<!-- Default node -->
<!ELEMENT default EMPTY>
<!ATTLIST default comment CDATA #IMPLIED>
<!ATTLIST default type CDATA #IMPLIED>
<!ATTLIST default ssh-user CDATA #IMPLIED>
<!ATTLIST default ssh-host CDATA #IMPLIED>
<!ATTLIST default ssh-port CDATA #IMPLIED>
<!ATTLIST default ssh-id CDATA #IMPLIED>
<!ATTLIST default xml:base CDATA #IMPLIED>

<!-- Group of host nodes -->
<!ELEMENT group (host*)>
<!ATTLIST group name CDATA #REQUIRED>
<!ATTLIST group comment CDATA #IMPLIED>
<!ATTLIST group type CDATA #IMPLIED>
<!ATTLIST group ssh-user CDATA #IMPLIED>
<!ATTLIST group ssh-host CDATA #IMPLIED>
<!ATTLIST group ssh-port CDATA #IMPLIED>
<!ATTLIST group ssh-id CDATA #IMPLIED>
<!ATTLIST group xml:base CDATA #IMPLIED>

<!-- Host node -->
<!ELEMENT host EMPTY>
<!ATTLIST host name CDATA #REQUIRED>
<!ATTLIST host comment CDATA #IMPLIED>
<!ATTLIST host type CDATA #IMPLIED>
<!ATTLIST host ssh-user CDATA #IMPLIED>
<!ATTLIST host ssh-host CDATA #IMPLIED>
<!ATTLIST host ssh-port CDATA #IMPLIED>
<!ATTLIST host ssh-id CDATA #IMPLIED>
<!ATTLIST host xml:base CDATA #IMPLIED>
